{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~assets/*": [
        "assets/*"
      ] // ðŸ‘ˆ nuevo alias
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "global.d.ts" // ðŸ‘ˆ aquÃ­ o "./types/**/*.d.ts"
    ,
    "metro.config.js",
    "nativewind-env.d.ts"
  ]
}